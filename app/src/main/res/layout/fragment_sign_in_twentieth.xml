<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/image_13"
        xmlns:android="http://schemas.android.com/apk/res/android">




    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image_14"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_xxxlarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="BEAUTY"
        android:textSize="@dimen/spacing_mxlarge"
        android:textColor="@color/overlay_dark_100"
        android:textStyle="bold"
        />


    <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="35dp"
            android:background="@color/overlay_light_90"
            android:layout_marginRight="@dimen/spacing_xlarge"
            android:layout_marginLeft="@dimen/spacing_xlarge"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Username"
                android:padding="@dimen/spacing_large"
                android:theme="@style/EditTextTwentieth"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:padding="@dimen/spacing_large"
                android:theme="@style/EditTextTwentieth"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/layout"
            android:layout_gravity="right"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="@dimen/spacing_large"
            android:src="@drawable/ic_keyboard_arrow_1"
            android:background="@color/overlay_dark_100"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/spacing_xlarge"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Create account"
            android:textColor="@color/overlay_dark_100"
            android:textStyle="bold"
            />

  </LinearLayout>
