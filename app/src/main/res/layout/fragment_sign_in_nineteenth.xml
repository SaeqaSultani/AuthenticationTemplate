<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/spacing_middle"
            android:text="Sign up"
            android:textColor="@color/overlay_dark_100"/>

        <TextView
            android:id="@+id/text_view_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:text="Welcome back!"
            android:textSize="@dimen/spacing_mxlarge"
            android:textColor="@color/overlay_dark_100"
            android:textStyle="bold"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Log back into your account"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:padding="@dimen/spacing_medium"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="35dp"
        android:layout_marginTop="-25dp">


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Your Email"
                android:padding="@dimen/spacing_large"
                android:theme="@style/EditTextNineteenth"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:padding="@dimen/spacing_large"
                android:theme="@style/EditTextNineteenth"/>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/spacing_middle"
                android:layout_gravity="end"
                android:text="Forgot?"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="@color/overlay_dark_100"
                />

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/ic_background_2"
                android:backgroundTint="@color/yellow_A50"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/overlay_dark_100"
                 />

        </LinearLayout>

    </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:src="@drawable/image_11"
            android:scaleType="centerCrop"
            android:layout_marginTop="-8dp"
            />

  </LinearLayout>

</ScrollView>
