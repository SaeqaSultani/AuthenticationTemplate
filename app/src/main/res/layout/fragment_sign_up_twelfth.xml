<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_1000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_6"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-120dp"
            android:text="BooK Your Plant"
            android:textSize="@dimen/spacing_xlarge"
            android:textColor="@color/overlay_light_90"
            app:fontFamily="@font/artifika"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/spacing_middle"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/overlay_light_90"
            android:text="Find the plant you love."
            android:padding="@dimen/spacing_medium"
            android:textSize="@dimen/spacing_smlarge"
            android:layout_marginLeft="@dimen/spacing_middle"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/overlay_light_90"
            android:text="Delivered to your door."
            android:padding="@dimen/spacing_medium"
            android:textSize="@dimen/spacing_smlarge"
            android:layout_marginLeft="@dimen/spacing_middle"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_mlarge"
                    android:background="@drawable/txt_area_dark_3"
                    android:text="Sign Up with Facebook"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:text="-OR-"
                    android:textSize="@dimen/spacing_smlarge"
                    android:layout_gravity="center"
                    android:textColor="@color/overlay_light_90"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/spacing_mlarge"
                    android:hint="E-mail"
                    android:textColorHint="@color/overlay_light_90"
                    android:textColor="@color/overlay_light_90"
                    android:theme="@style/EditTextTwelfth_2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_mlarge"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:hint="Password"
                    android:textColor="@color/overlay_light_90"
                    android:textColorHint="@color/overlay_light_90"
                    android:theme="@style/EditTextTwelfth_2"
                    />


                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_mlarge"
                    android:backgroundTint="@color/green_A800"
                    android:background="@drawable/ic_background_1"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:text="Already have an account?"
                        android:textColor="@color/overlay_light_90"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/text_view_sign_up"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:text="Log In"
                        android:padding="@dimen/spacing_medium"
                        android:textColor="@color/green_A800"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
