<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_light_100"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/image_7">


        <TextView
            android:id="@+id/text_view_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:layout_gravity="center"
            android:text="Sign up"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/spacing_mxlarge"
            android:textColor="@color/overlay_light_90"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:src="@drawable/ic_shopping" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Customer"
            android:textColor="@color/overlay_light_90"
            android:textSize="@dimen/spacing_smlarge"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="35dp"
            android:layout_marginTop="@dimen/spacing_smlarge">


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/spacing_mlarge"
                    android:hint="E-mail"
                    android:theme="@style/EditTextThirteenth"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/spacing_mlarge"
                    android:hint="FullName"
                    android:theme="@style/EditTextThirteenth"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_mlarge"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:hint="Password"
                    android:theme="@style/EditTextThirteenth"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_mlarge"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:hint="ConfirnPassword"
                    android:theme="@style/EditTextThirteenth"
                    />

                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/gradient_6"
                    android:text="Sign up"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_mlarge"
                    android:text="________ Or  sign up with ________"
                    android:gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_background_1"
                        android:backgroundTint="#1877F2"
                        android:text="Facebook"
                        android:textSize="13sp"
                        android:textColor="@color/overlay_light_90"
                        android:drawableLeft="@drawable/icon_facebook_1" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_background_1"
                        android:layout_marginLeft="@dimen/spacing_xxlarge"
                        android:backgroundTint="#DC4B3B"
                        android:drawableLeft="@drawable/icon_google_1"
                        android:text="Google"
                        android:textSize="13sp"
                        android:textColor="@color/overlay_light_90"
                        />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>